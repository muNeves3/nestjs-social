// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String

  createdAt DateTime @default(now())

  @@map("user")
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  text        String
  userId      Int
  publishedAt DateTime @default(now())

  @@map("post")
}

model Like {
  id        Int      @id @default(autoincrement())
  userId    Int
  postId    Int
  createdAt DateTime @default(now())

  @@map("likes")
}

model Comment {
  id          Int      @id @default(autoincrement())
  text        String
  postId      Int
  publishedAt DateTime @default(now())
  likes       Int      @default(0)

  @@map("comment")
}
